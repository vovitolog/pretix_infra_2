global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - alertmanager:9093

rule_files:
  - /etc/prometheus/rules.yml

scrape_configs:

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          instance: "prometheus"

  - job_name: 'alertmanager'
    static_configs:
      - targets: ['alertmanager:9093']
        labels:
          instance: "alertmanager"

  - job_name: 'grafana'
    metrics_path: /metrics
    static_configs:
      - targets: ['grafana:3000']
        labels:
          instance: "grafana"

  - job_name: 'node_exporter'
    file_sd_configs:
      - files:
          - /etc/prometheus/file_sd/node_targets.yml

  - job_name: 'blackbox'
    metrics_path: /probe
    params:
      module: [http_2xx]
    file_sd_configs:
      - files:
          - /etc/prometheus/file_sd/blackbox_targets.yml
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ hostvars['main-monitoring']['internal_ip'] }}:9115

  - job_name: 'ping'
    file_sd_configs:
      - files:
          - /etc/prometheus/file_sd/ping_targets.yml
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: {{ hostvars['main-monitoring']['internal_ip'] }}:9427
    metric_relabel_configs:
      {%- block relabel_configs %}
      {%- set _ = "" %}
      {%- for host in groups['all'] %}
      
      - source_labels: [ip]
        target_label: instance
        regex: '^{{ hostvars[host].internal_ip|regex_escape() }}$'
        replacement: '{{ host }}'
      - source_labels: [ip]
        target_label: host_type
        regex: '^{{ hostvars[host].internal_ip|regex_escape() }}$'
        replacement: '{{ hostvars[host].group_names | first }}'
      {%- endfor %}
      {%- endblock %}